    <svg class="nav_location_icon" style="width: 18px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <symbol id="nav-location-icon" viewBox="0 0 512 512">
            <path d="M444.52 3.52L28.74 195.42c-47.97 22.39-31.98 92.75 19.19 92.75h175.91v175.91c0 51.17 70.36 67.17 92.75 19.19l191.9-415.78c15.99-38.39-25.59-79.97-63.97-63.97z">
            </path>
        </symbol>
    </svg>
</div>

<div class="shop-locator-wrapper">
    <div class="shop-locator-container--left" id="search-header">
        <header class="shop-locator-search">
            <h1 class="search-headline">Find nearest store</h1>
            <input type="text" id="pac-input" class="controls" placeholder="Search..">
        </header>
        <table class="shop-locator-list" id="listofstores">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <section class="shop-locator-list-item padding--small">
                                <h5 class="headline">@Html.DisplayFor(storeInModel => item.Name)</h5>
                                <p class="shop-locator-list-item__address-info">
                                    <span>
                                        @Html.DisplayFor(storeInModel => item.Street)
                                        @Html.DisplayFor(storeInModel => item.Housenumber)
                                    </span>
                                    <span>
                                        @Html.DisplayFor(storeInModel => item.Zipcode)
                                        @Html.DisplayFor(storeInModel => item.City)
                                    </span>
                                </p>

                            </section>
                            <div class="shop-locator-list-bar"></div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="shop-locator-container--right" id="mapDiv">
    </div>
</div>